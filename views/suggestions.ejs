<html lang="en">
	<head>
		<title>FixFix Productivity Suggestion App</title>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="css/main.css" />
		<noscript><link rel="stylesheet" href="css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">
		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
					<header id="header">
						<div class="inner">

							<!-- Logo -->
								<a href="#" class="logo">
									<span class="symbol"><img src="images/logo.svg" alt="" /></span><span class="title">FixFix</span>
								</a>

							<!-- Nav -->
								<nav>
									<ul>
										<li><a href="#menu">Menu</a></li>
									</ul>
								</nav>

						</div>
					</header>

				<!-- Menu -->
					<nav id="menu">
						<h2>Menu</h2>
						<ul>
							<li><a href="/logout">Logout</a></li>
							<li><a href="/suggestions">Home</a></li>
							<li><a href="#">Winners</a></li>
							<li><a href="#">About</a></li>
							<li><a href="#">Contact Us</a></li>

						</ul>
					</nav>

				<!-- Main -->
					<div id="main">
						<div class="inner">
							<h1>Hello <%= user.userName %>.</h1>
							<span class="image main"><img src="images/pic13.jpg" alt="" /></span>
							<% if (roomNumber == null) { %>
								<div id="enterVar">
									<h1>Enter unique room name or number.</h1>
									<form action="/suggestions/sendRoomNumber" method="POST">

										<div class="fields">
											<div class="field">
												<input type="text" placeholder="Enter room number" name='roomNumberInput'>
											</div>
										</div>

										<ul class="actions">
											<li><input type="submit" id="enterVarButton" class="primary"></li>
										</ul>	


										<!-- <input type="text" placeholder="Enter room number" name='roomNumberInput'>
										<input type="submit" id="enterVarButton"> -->
									</form>
								</div>  
							 <% } else{ %>  
								<div  id="sendSugg" class="inner">
									<h1>What can make your company better?</h1>
									<h3>You are currently in room: <%= roomNumber %></h3>

									<div class="table-wrapper">
										<table>
											<thead>
												<tr>
													<th>Name</th>
													<th>Suggestion</th>
													<th>Date</th>
												</tr>
											</thead>
											<tbody>
												<% suggestions.forEach( el => { %>
												<tr class='suggestionItem' data-id='<%=el._id%>'>
													<th><%= el.name %></th>
												
													<th class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.suggestion %></th>
												<!-- <span class='del'> Delete </span> -->
												<th><time datetime="2022-12-12 06:42:45">12/12/2022 6:42 AM</time></th>
		
												
												</tr>
												
												<% }) %>  
											</tbody>
										</table>
									</div>


									<!-- <ul>
									<% suggestions.forEach( el => { %>
											<li class='suggestionItem' data-id='<%=el._id%>'>
												<span><%= el.name %></span>
												<span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.suggestion %></span>
												<span class='del'> Delete </span>
											</li>
									<% }) %>    
									</ul> -->
									<form action="/suggestions/createSuggestion" method='POST' >

										<div class="fields">
											<div class="field half">
												<input type="hidden" placeholder="Enter name" name='userName' value=<%= user.userName %>>
											</div>
											<div class="field half">
												<input type="hidden" placeholder="Enter room number" name='roomName' value=<%= roomNumber %>>
											</div>
											<div class="field">
												<input type="text" placeholder="Enter your idea" name='suggestionItem' class="fields">
											</div>
										</div>

										<ul class="actions">
											<li><input type="submit" value="Submit" class="primary"></li>
										</ul>	

									</form>
								</div>
							 <% } %>
						</div>
					</div>

				<!-- Footer -->
					<footer id="footer">
						<div class="inner">
							<!-- <section>
								<h2>Get in touch</h2>
								<form method="post" action="#">
									<div class="fields">
										<div class="field half">
											<input type="text" name="name" id="name" placeholder="Name" />
										</div>
										<div class="field half">
											<input type="email" name="email" id="email" placeholder="Email" />
										</div>
										<div class="field">
											<textarea name="message" id="message" placeholder="Message"></textarea>
										</div>
									</div>
									<ul class="actions">
										<li><input type="submit" value="Send" class="primary" /></li>
									</ul>
								</form>
							</section> -->
							<section>
								<h2>Follow</h2>
								<ul class="icons">
									<li><a href="#" class="icon brands style2 fa-twitter"><span class="label">Twitter</span></a></li>
									<li><a href="#" class="icon brands style2 fa-facebook-f"><span class="label">Facebook</span></a></li>
									<li><a href="#" class="icon brands style2 fa-instagram"><span class="label">Instagram</span></a></li>
									<li><a href="#" class="icon brands style2 fa-dribbble"><span class="label">Dribbble</span></a></li>
									<li><a href="#" class="icon brands style2 fa-github"><span class="label">GitHub</span></a></li>
									<li><a href="#" class="icon brands style2 fa-500px"><span class="label">500px</span></a></li>
									<li><a href="#" class="icon solid style2 fa-phone"><span class="label">Phone</span></a></li>
									<li><a href="#" class="icon solid style2 fa-envelope"><span class="label">Email</span></a></li>
								</ul>
							</section>
							<ul class="copyright">
								<li>&copy; FixFix. All rights reserved</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
							</ul>
						</div>
					</footer>

			</div>

		<!-- Scripts -->
			<script src="js/jquery.min.js"></script>
			<script src="js/browser.min.js"></script>
			<script src="js/breakpoints.min.js"></script>
			<script src="js/util.js"></script>
			<script src="js/main.js"></script>

	</body>
</html>